<ul id="lists">
  <% sort_by_completion_status(@all_lists).each do |list| %>
  <li class="<%= li_class_for(list) %>" >
    <a href="/all-lists/<%= list[:id] %>">
      <h2><%= list[:name] %></h2>
      <p><%= completed_todos_count(list) %> / <%= total_todos_count(list) %></p>
    </a>
  </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a href="/all-lists/new" class="add">New List</a>
<% end %>